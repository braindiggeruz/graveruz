MONGO_URL=mongodb://localhost:27017
DB_NAME=graveruz
NODE_ENV=production

# Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Fast Indexing (Google + Bing)
GOOGLE_SERVICE_ACCOUNT_PATH=./config/google-service-account.json
# Optional alias used by indexing_service.py (preferred if both are set)
GOOGLE_SERVICE_ACCOUNT_JSON_PATH=./config/google-service-account.json
BING_INDEXNOW_API_KEY=your_bing_indexnow_api_key_here
BASE_URL=https://graver-studio.uz

# Google Indexing API safety limits
GOOGLE_INDEXING_MAX_URLS_PER_RUN=20
GOOGLE_INDEXING_RETRY_429_MAX=3
GOOGLE_INDEXING_RETRY_429_BASE_DELAY_SECONDS=30
GOOGLE_INDEXING_NEXT_BATCH_SIZE=10
