---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  const authors = [...new Set(posts.map(post => post.data.author))];
  
  return authors.map(author => ({
    params: { author: author.toLowerCase().replace(/\s+/g, '-').replace(/\./g, '') },
    props: { author, posts: posts.filter(p => p.data.author === author) }
  }));
}

const { author, posts } = Astro.props;
const sortedPosts = posts.sort((a, b) => 
  new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime()
);

const siteUrl = 'https://gifting-hub-16.preview.emergentagent.com';
const title = `${author} — Автор | Graver.uz`;
const description = `Статьи автора ${author} о корпоративных подарках, брендировании и лазерной гравировке.`;

const breadcrumbs = [
  { name: 'Главная', url: siteUrl },
  { name: author, url: `${siteUrl}/author/${author.toLowerCase().replace(/\s+/g, '-').replace(/\./g, '')}` }
];

// Person schema for author
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": author,
  "url": `${siteUrl}/author/${author.toLowerCase().replace(/\s+/g, '-').replace(/\./g, '')}`,
  "worksFor": {
    "@type": "Organization",
    "name": "Graver.uz"
  }
};
---

<BaseLayout title={title} description={description} breadcrumbs={breadcrumbs}>
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />
  
  <section class="container" style="padding: 64px 20px;">
    <nav class="breadcrumbs">
      <a href="/">Блог</a>
      <span>›</span>
      <span>Автор</span>
    </nav>
    
    <div style="display: flex; align-items: center; gap: 24px; margin-bottom: 48px;">
      <div style="width: 80px; height: 80px; background: linear-gradient(135deg, #14b8a6, #06b6d4); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 2rem; color: #fff; font-weight: 700;">
        {author.charAt(0)}
      </div>
      <div>
        <h1 style="font-size: 2rem; color: #fff; margin-bottom: 8px;">{author}</h1>
        <p style="color: #888;">
          {sortedPosts.length} {sortedPosts.length === 1 ? 'статья' : 'статей'}
        </p>
      </div>
    </div>
    
    <h2 style="font-size: 1.5rem; color: #fff; margin-bottom: 24px;">Статьи автора</h2>
    
    <div class="posts-grid">
      {sortedPosts.map(post => (
        <article class="post-card">
          <div class="post-card-content">
            <span class="category">{post.data.category}</span>
            <h3>
              <a href={`/${post.slug}`} style="color: inherit; text-decoration: none;">
                {post.data.title}
              </a>
            </h3>
            <p>{post.data.excerpt}</p>
            <a href={`/${post.slug}`} class="read-more">Читать статью →</a>
          </div>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>
