---
import { locales, defaultLocale, getLocalizedUrl, getAlternateUrls } from '../i18n/config';
import type { Locale } from '../i18n/config';
import { t } from '../i18n/utils';

export interface Props {
  title: string;
  description: string;
  locale: Locale;
  canonical?: string;
  image?: string;
  article?: {
    publishedAt: string;
    updatedAt?: string;
    author: string;
    category: string;
    tags: string[];
  };
  breadcrumbs?: { name: string; url: string }[];
  faq?: { question: string; answer: string }[];
  alternateSlug?: string; // For linking translations
}

const { title, description, locale, canonical, image, article, breadcrumbs, faq, alternateSlug } = Astro.props;

const siteUrl = import.meta.env.SITE || 'https://blog.graver.uz';
const mainSiteUrl = 'https://gifting-hub-16.emergent.host';

// Build canonical URL
const currentPath = Astro.url.pathname;
const canonicalUrl = canonical || `${siteUrl}${currentPath}`;

// Build alternate URLs for hreflang
const pathWithoutLocale = currentPath.replace(/^\/(ru|uz)/, '');
const alternateUrls = locales.map(loc => ({
  locale: loc,
  url: `${siteUrl}/${loc}${pathWithoutLocale || '/'}`
}));

const ogImage = image || `${siteUrl}/images/og-default.jpg`;

// Contact links
const telegramLink = 'https://t.me/GraverAdm';
const whatsappLink = 'https://wa.me/998770802288';
const phoneNumber = '+998 77 080 22 88';

// JSON-LD Schemas
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Graver.uz",
  "url": mainSiteUrl,
  "logo": `${mainSiteUrl}/logo.png`,
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": phoneNumber,
    "contactType": "sales",
    "areaServed": "UZ",
    "availableLanguage": ["ru", "uz"]
  },
  "address": {
    "@type": "PostalAddress",
    "addressLocality": locale === 'uz' ? "Toshkent" : "Ташкент",
    "addressCountry": "UZ"
  }
};

const webSiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": t(locale, 'site.title'),
  "url": `${siteUrl}/${locale}/`,
  "inLanguage": locale
};

const articleSchema = article ? {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "image": ogImage,
  "datePublished": article.publishedAt,
  "dateModified": article.updatedAt || article.publishedAt,
  "inLanguage": locale,
  "author": {
    "@type": "Person",
    "name": article.author
  },
  "publisher": {
    "@type": "Organization",
    "name": "Graver.uz",
    "logo": {
      "@type": "ImageObject",
      "url": `${mainSiteUrl}/logo.png`
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalUrl
  }
} : null;

const breadcrumbSchema = breadcrumbs ? {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbs.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.url
  }))
} : null;

const faqSchema = faq && faq.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faq.map(item => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
} : null;

// Current locale switcher URL
const getLocaleUrl = (targetLocale: Locale) => {
  return `/${targetLocale}${pathWithoutLocale || '/'}`;
};
---

<!DOCTYPE html>
<html lang={locale}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="title" content={title} />
  <meta name="description" content={description} />
  <meta name="keywords" content={locale === 'uz' 
    ? "korporativ sovg'alar, lazer gravirovka, brendlash, Toshkent, B2B, mukofotlar"
    : "корпоративные подарки, лазерная гравировка, брендирование, Ташкент, B2B, награды"} />
  
  <!-- Canonical -->
  <link rel="canonical" href={canonicalUrl} />
  
  <!-- Hreflang -->
  {alternateUrls.map(alt => (
    <link rel="alternate" hreflang={alt.locale} href={alt.url} />
  ))}
  <link rel="alternate" hreflang="x-default" href={`${siteUrl}/ru${pathWithoutLocale || '/'}`} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={article ? "article" : "website"} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:locale" content={locale === 'uz' ? 'uz_UZ' : 'ru_RU'} />
  <meta property="og:site_name" content={t(locale, 'site.title')} />
  
  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={canonicalUrl} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />
  
  <!-- Robots -->
  <meta name="robots" content="index, follow" />
  
  <!-- RSS -->
  <link rel="alternate" type="application/rss+xml" title={`${t(locale, 'site.title')} RSS`} href={`${siteUrl}/${locale}/rss.xml`} />
  
  <!-- Preconnect -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <!-- JSON-LD Schemas -->
  <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(webSiteSchema)} />
  {articleSchema && <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />}
  {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}
  {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />}
  
  <style is:global>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: #0a0a0a;
      color: #e5e5e5;
      line-height: 1.7;
    }
    
    a { color: #14b8a6; text-decoration: none; transition: color 0.2s; }
    a:hover { color: #0d9488; }
    
    .container { max-width: 1200px; margin: 0 auto; padding: 0 20px; }
    
    .header {
      background: #111;
      border-bottom: 1px solid #222;
      padding: 16px 0;
      position: sticky;
      top: 0;
      z-index: 100;
    }
    
    .header-inner { display: flex; justify-content: space-between; align-items: center; gap: 16px; flex-wrap: wrap; }
    
    .logo { font-size: 1.5rem; font-weight: 700; color: #fff; }
    .logo span { color: #14b8a6; }
    
    .nav-links { display: flex; gap: 24px; list-style: none; align-items: center; }
    .nav-links a { color: #999; font-size: 0.9rem; }
    .nav-links a:hover { color: #14b8a6; }
    
    /* Language Switcher */
    .lang-switcher {
      display: flex;
      gap: 4px;
      background: #222;
      padding: 4px;
      border-radius: 8px;
    }
    
    .lang-switcher a {
      padding: 6px 12px;
      border-radius: 6px;
      font-size: 0.85rem;
      font-weight: 600;
      color: #888;
      transition: all 0.2s;
    }
    
    .lang-switcher a:hover { color: #fff; background: #333; }
    .lang-switcher a.active { color: #fff; background: #14b8a6; }
    
    .cta-primary {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: linear-gradient(135deg, #14b8a6, #06b6d4);
      color: #fff !important;
      padding: 12px 24px;
      border-radius: 8px;
      font-weight: 600;
      font-size: 0.95rem;
      transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .cta-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(20, 184, 166, 0.3);
      color: #fff !important;
    }
    
    .cta-secondary {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: transparent;
      color: #14b8a6 !important;
      padding: 12px 24px;
      border-radius: 8px;
      font-weight: 600;
      font-size: 0.95rem;
      border: 1px solid #14b8a6;
      transition: background 0.2s;
    }
    
    .cta-secondary:hover { background: rgba(20, 184, 166, 0.1); }
    
    .breadcrumbs {
      display: flex;
      gap: 8px;
      font-size: 0.85rem;
      color: #666;
      margin-bottom: 24px;
      flex-wrap: wrap;
    }
    
    .breadcrumbs a { color: #888; }
    .breadcrumbs span { color: #444; }
    
    .article-header { margin-bottom: 40px; }
    
    .article-meta {
      display: flex;
      gap: 16px;
      flex-wrap: wrap;
      font-size: 0.85rem;
      color: #888;
      margin-bottom: 16px;
    }
    
    .article-meta .category {
      background: rgba(20, 184, 166, 0.15);
      color: #14b8a6;
      padding: 4px 12px;
      border-radius: 20px;
    }
    
    .article-title {
      font-size: 2.5rem;
      font-weight: 700;
      color: #fff;
      line-height: 1.2;
      margin-bottom: 16px;
    }
    
    .article-excerpt { font-size: 1.2rem; color: #999; line-height: 1.6; }
    
    .article-content { max-width: 800px; }
    .article-content h2 {
      font-size: 1.75rem;
      font-weight: 700;
      color: #fff;
      margin: 48px 0 20px;
      padding-top: 24px;
      border-top: 1px solid #222;
    }
    
    .article-content h3 { font-size: 1.35rem; font-weight: 600; color: #e5e5e5; margin: 32px 0 16px; }
    .article-content p { margin-bottom: 20px; color: #ccc; }
    .article-content ul, .article-content ol { margin: 0 0 24px 24px; color: #ccc; }
    .article-content li { margin-bottom: 8px; }
    .article-content strong { color: #fff; }
    
    .article-content table { width: 100%; border-collapse: collapse; margin: 24px 0; font-size: 0.9rem; }
    .article-content th { background: #1a1a1a; color: #14b8a6; padding: 12px 16px; text-align: left; border: 1px solid #333; }
    .article-content td { padding: 12px 16px; border: 1px solid #333; color: #ccc; }
    .article-content tr:nth-child(even) { background: #111; }
    
    .cta-box {
      background: linear-gradient(135deg, rgba(20, 184, 166, 0.1), rgba(6, 182, 212, 0.05));
      border: 1px solid rgba(20, 184, 166, 0.3);
      border-radius: 16px;
      padding: 32px;
      margin: 40px 0;
      text-align: center;
    }
    
    .cta-box h3 { color: #fff; font-size: 1.5rem; margin-bottom: 12px; }
    .cta-box p { color: #999; margin-bottom: 24px; }
    .cta-buttons { display: flex; gap: 16px; justify-content: center; flex-wrap: wrap; }
    
    .toc { background: #111; border: 1px solid #222; border-radius: 12px; padding: 24px; margin: 32px 0; }
    .toc h4 { color: #fff; font-size: 1rem; margin-bottom: 16px; }
    .toc ul { list-style: none; margin: 0; padding: 0; }
    .toc li { margin-bottom: 8px; }
    .toc a { color: #888; font-size: 0.9rem; }
    .toc a:hover { color: #14b8a6; }
    
    .faq-section { margin: 48px 0; padding-top: 32px; border-top: 1px solid #222; }
    .faq-section h2 { font-size: 1.75rem; color: #fff; margin-bottom: 24px; }
    .faq-item { background: #111; border: 1px solid #222; border-radius: 12px; margin-bottom: 16px; overflow: hidden; }
    .faq-question { padding: 20px 24px; color: #fff; font-weight: 600; cursor: pointer; display: flex; justify-content: space-between; align-items: center; }
    .faq-question::after { content: '+'; color: #14b8a6; font-size: 1.5rem; }
    .faq-item[open] .faq-question::after { content: '−'; }
    .faq-answer { padding: 0 24px 20px; color: #999; line-height: 1.7; }
    
    .related-posts { margin: 48px 0; padding-top: 32px; border-top: 1px solid #222; }
    .related-posts h3 { font-size: 1.5rem; color: #fff; margin-bottom: 24px; }
    .related-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 24px; }
    .related-card { background: #111; border: 1px solid #222; border-radius: 12px; padding: 24px; transition: border-color 0.2s; }
    .related-card:hover { border-color: #14b8a6; }
    .related-card h4 { color: #fff; font-size: 1.1rem; margin-bottom: 8px; }
    .related-card p { color: #888; font-size: 0.9rem; }
    
    .footer { background: #111; border-top: 1px solid #222; padding: 48px 0; margin-top: 64px; }
    .footer-inner { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 40px; }
    .footer h4 { color: #fff; font-size: 1rem; margin-bottom: 16px; }
    .footer ul { list-style: none; }
    .footer li { margin-bottom: 8px; }
    .footer a { color: #888; font-size: 0.9rem; }
    .footer-bottom { margin-top: 40px; padding-top: 24px; border-top: 1px solid #222; text-align: center; color: #666; font-size: 0.85rem; }
    
    .posts-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap: 32px; }
    .post-card { background: #111; border: 1px solid #222; border-radius: 16px; overflow: hidden; transition: border-color 0.2s, transform 0.2s; }
    .post-card:hover { border-color: #14b8a6; transform: translateY(-4px); }
    .post-card-content { padding: 24px; }
    .post-card .category { display: inline-block; background: rgba(20, 184, 166, 0.15); color: #14b8a6; padding: 4px 12px; border-radius: 20px; font-size: 0.8rem; margin-bottom: 12px; }
    .post-card h3 { color: #fff; font-size: 1.25rem; margin-bottom: 12px; line-height: 1.4; }
    .post-card p { color: #888; font-size: 0.9rem; margin-bottom: 16px; }
    .post-card .read-more { color: #14b8a6; font-weight: 600; font-size: 0.9rem; }
    
    .hero { padding: 80px 0; text-align: center; background: linear-gradient(180deg, #0a0a0a 0%, #111 100%); }
    .hero h1 { font-size: 3rem; font-weight: 700; color: #fff; margin-bottom: 16px; }
    .hero h1 span { color: #14b8a6; }
    .hero p { font-size: 1.2rem; color: #888; max-width: 600px; margin: 0 auto 32px; }
    
    @media (max-width: 768px) {
      .article-title { font-size: 1.75rem; }
      .hero h1 { font-size: 2rem; }
      .nav-links { display: none; }
      .cta-buttons { flex-direction: column; }
    }
  </style>
</head>
<body>
  <header class="header">
    <div class="container header-inner">
      <a href={`/${locale}/`} class="logo">Graver<span>.uz</span> {locale === 'uz' ? 'Blog' : 'Блог'}</a>
      <nav>
        <ul class="nav-links">
          <li><a href={`/${locale}/`}>{t(locale, 'nav.articles')}</a></li>
          <li><a href={`/${locale}/category/гайды`}>{t(locale, 'nav.guides')}</a></li>
          <li><a href={`/${locale}/category/производство`}>{t(locale, 'nav.production')}</a></li>
          <li><a href={mainSiteUrl} target="_blank">{t(locale, 'nav.mainSite')} →</a></li>
          <li>
            <div class="lang-switcher">
              <a href={getLocaleUrl('ru')} class={locale === 'ru' ? 'active' : ''}>RU</a>
              <a href={getLocaleUrl('uz')} class={locale === 'uz' ? 'active' : ''}>UZ</a>
            </div>
          </li>
        </ul>
      </nav>
      <!-- Mobile lang switcher -->
      <div class="lang-switcher" style="display: none;">
        <a href={getLocaleUrl('ru')} class={locale === 'ru' ? 'active' : ''}>RU</a>
        <a href={getLocaleUrl('uz')} class={locale === 'uz' ? 'active' : ''}>UZ</a>
      </div>
    </div>
  </header>
  
  <main>
    <slot />
  </main>
  
  <footer class="footer">
    <div class="container">
      <div class="footer-inner">
        <div>
          <h4>Graver.uz</h4>
          <p style="color: #888; font-size: 0.9rem; margin-top: 8px;">{t(locale, 'footer.about')}</p>
        </div>
        <div>
          <h4>{t(locale, 'footer.categories')}</h4>
          <ul>
            <li><a href={`/${locale}/category/гайды`}>{t(locale, 'categories.гайды')}</a></li>
            <li><a href={`/${locale}/category/производство`}>{t(locale, 'categories.производство')}</a></li>
            <li><a href={`/${locale}/category/закупки`}>{t(locale, 'categories.закупки')}</a></li>
            <li><a href={`/${locale}/category/награды`}>{t(locale, 'categories.награды')}</a></li>
            <li><a href={`/${locale}/category/наборы`}>{t(locale, 'categories.наборы')}</a></li>
          </ul>
        </div>
        <div>
          <h4>{t(locale, 'footer.contacts')}</h4>
          <ul>
            <li><a href={telegramLink} target="_blank">Telegram</a></li>
            <li><a href={whatsappLink} target="_blank">WhatsApp</a></li>
            <li><a href={`tel:${phoneNumber.replace(/\s/g, '')}`}>{phoneNumber}</a></li>
          </ul>
        </div>
        <div>
          <h4>{t(locale, 'footer.seo')}</h4>
          <ul>
            <li><a href="/sitemap-index.xml">Sitemap</a></li>
            <li><a href={`/${locale}/rss.xml`}>RSS Feed</a></li>
          </ul>
        </div>
      </div>
      <div class="footer-bottom">{t(locale, 'footer.copyright')}</div>
    </div>
  </footer>
  
  <style>
    @media (max-width: 768px) {
      .header-inner .lang-switcher:last-child { display: flex !important; }
    }
  </style>
</body>
</html>
